{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["resources/js/*"],
      "ziggy-js": ["./vendor/tightenco/ziggy"]
    }
  },
  "include": [
    "resources/js/**/*",
    "resources/Utils/formatters.ts",
    "resources/Utils/inertiaApi.ts",
    "resources/Utils/interfaces.ts"
  ],
  "exclude": ["node_modules", "public"]
}

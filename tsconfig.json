{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["resources/ts/*"],
      "ziggy-js": ["./vendor/tightenco/ziggy"]
    }
  },
  "include": ["resources/ts/**/*"],
  "exclude": ["node_modules", "public"]
}
